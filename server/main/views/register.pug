extends layout

block content
  h1 Register
  p please enter your username below
  p(style="color:red") #{error}
  form(method="POST")
    label(for="email") Email
    input(type="text", value=email, name="email", id="email")
    label(for="password") Choose a password
    input(type="password", value=password, name="password", id="password")
    button(type="submit", id="submit") Submit

  a(href="/login") back
